<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Watchflix
			{% endblock %}
		</title>
		<link rel="icon" type="image/png" href="/images/tv.png">
		<link
		rel="stylesheet" href="/styles/base.css">
		{# Hay que tener cuidado con el ./ y hacerlo con el / para que lo pille desde todas las rutas}
																																												        {# Run `composer require symfony/webpack-encore-bundle`
																																												           and uncomment the following Encore helpers to start using Symfony UX #}
		{% block stylesheets %}
			{#{{ encore_entry_link_tags('app') }}#}
		{% endblock %}

		{% block javascripts %}
			{#{{ encore_entry_script_tags('app') }}#}
		{% endblock %}
	</head>
	<body>
		{% block nav %}
			<a class="navlink" href="{{path('home')}}"><img class="logo" src="/images/logo.png"/></a>
			<header>
				<nav>

					{% if app.user %}
						<a class="navlink" href="{{path('home')}}"><img class="nav-icon" src="/images/home.png"/></a>
						<a class="navlink" href="{{path('shows')}}"><img class="nav-icon" src="/images/tv.png"/></a>
						<a class="navlink" href="{{path('formulario')}}"><img class="nav-icon" src="/images/tvplus.png"/></a>
						<a class="navlink" href="{{path('movies')}}"><img class="nav-icon-user" src="/images/movies.png"/></a>
						<a class="navlink" href="{{path('formulario2')}}"><img class="nav-icon-user" src="/images/moviesplus.png"/></a>
					{% else %}
						<a class="navlink" href="{{path('app_login')}}"><img class="nav-icon-user" src="/images/user.png"/></a>
						<a class="navlink" href="{{path('register')}}"><img class="nav-icon-user" src="/images/register.png"/></a>
					{% endif %}
				</nav>
			</header>
		{% endblock %}

		{% block body %}{% endblock %}

		<footer>
			{% if app.user %}
				<div style="text-align: center; color: black; font-size: 12px; font-weight: bold;" class="detail">
					You are logged in as
					{{ app.user.username }},
					<a style="text-decoration: none; color: #DC1A28" href="{{ path('app_logout') }}">Logout</a>
					<img src="{{app.user.image}}" width="30px"/>
				</div>
			{% endif %}
			<p style="color: white; font-weight: bold;">
				<span style="color: #DC1A28">WATCHFLIX</span>
				| Antonio Rosales Martínez © 2021</p>
			<p style="color: white;font-weight: bold">GitHub |
				<a style="text-decoration: none; color: #DC1A28" target="_blank" href="https://github.com/lethamburn/php_watchflix">github.com/lethamburn/php_watchflix</a>
			</p>
		</footer>
	</body>
</html>
