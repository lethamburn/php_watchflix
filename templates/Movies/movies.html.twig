{% extends "base.html.twig" %}

{% block title %}Watchflix - Movies
{% endblock %}

{% block body %}
	<div class="container">
		{% for movie in movies %}
			<div class="card">
				<a href="{{ path('movie', {'id': movie.id}) }}">
					<img class="img-poster" src="{{movie.image}}"/>
				</a>
			</div>
		{% endfor %}
	</div>

{% endblock %}