{% extends 'base.html.twig' %}

{% block title %}Watchflix - Log in!
{% endblock %}

{% block body %}
	<form method="post">
		{% if error %}
			<div style="text-align: center; color: #DC1A28" class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}

		{% if app.user %}
			<div class="mb-3">
				You are logged in as
				{{ app.user.username }},
				<a href="{{ path('app_logout') }}">Logout</a>
			</div>
		{% endif %}
		<h2 style="text-align: center; color: white" class="h3 mb-3 font-weight-normal">Please sign in</h2>
		<label for="inputUsername" style="color: white">Username</label>
		<input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" autocomplete="username" required autofocus>
		<label style="color: white" for="inputPassword">Password</label>
		<input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

		<input
		type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

		{#
		        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
		        See https://symfony.com/doc/current/security/remember_me.html
		
		        <div class="checkbox mb-3">
		            <label>
		                <input type="checkbox" name="_remember_me"> Remember me
		            </label>
		        </div>
		    #}
		<br/>
        <div style="text-align: center; padding-top:">
		<button class="btn btn-lg btn-primary" type="submit">
			Sign in
		</button>
        </div>
	</form>
{% endblock %}
